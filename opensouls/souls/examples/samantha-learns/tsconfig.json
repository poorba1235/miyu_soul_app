{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["soul/**/*", "tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "src"]
}
